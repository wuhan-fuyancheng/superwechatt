    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_pressed"
        />
    <RelativeLayout
        android:id="@+id/rl_qianming"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
